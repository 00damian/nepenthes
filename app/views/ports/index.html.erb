<div class="page-header">
  <h1>Ports<%= params[:tag].present? ? " tagged \"#{params[:tag]}\"" : '' %></h1>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Port</th>
      <th># of Hosts</th>
      <th># inspected</th>
    </tr>
  </thead>
  <tbody>
    <% @output_array.each do |port| %>
      <tr>
        <td><%= link_to port[:number],
          (params[:tag].present? ? tagged_port_path(:id => port[:number], :tag => tag_escape(params[:tag])) : port_path(port[:number])) %></td>
        <td><%= port[:count] %></td>
        <td><%= port[:done] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
